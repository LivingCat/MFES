/*
Defines a product
*/
class Product
instance variables
  productClass: ProductClass;
  name: seq of (char);
  buyPrice: real;
  sellPrice: real;
  inv buyPrice >= 0 and sellPrice >= 0 and len name > 0; 
  
operations

	--Creates a product with the received productClass, name, price that the store buys the product for and
	-- price that the store sells it for
	public Product: ProductClass * seq of (char) * real * real ==> Product
		Product(pClass,n,bPrice,sPrice) == (
			productClass := pClass;
			name := n;
			buyPrice := bPrice;
			sellPrice := sPrice;
			return self;
		);
	
	--
	pure public getBuyPrice: () ==> real 
		getBuyPrice() == return buyPrice;
		
	pure public getSellPrice: () ==> real 
		getSellPrice() == return sellPrice;
		
	pure public getName: () ==> seq of (char)
		getName() == return name;
		
	pure public getClass: () ==> ProductClass
		getClass() == return productClass;

end Product
