/*
	Defines a client of the store
*/
class Client
instance variables
  name: seq of (char); 
  inv len name > 0;

operations
	--Constructor for class Client
	--n - client's name
	--Returns a client object
	public Client: seq of (char) ==> Client
		Client(n) == (name := n; return self);
		

	--Retrieve client's name
	public getName: () ==> seq of (char)
		getName() == return name;

end Client